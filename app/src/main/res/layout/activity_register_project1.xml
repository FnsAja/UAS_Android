<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".RegisterProject1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp"
                android:text="Project Detail"
                android:textSize="42sp"/>

            <Spinner
                android:id="@+id/proj_name_spinner"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:paddingVertical="15sp"
                android:paddingHorizontal="9sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/proj_jobdesc_layout"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/proj_jobdesc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jobdesc" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/proj_btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:text="Add User"/>

            <Button
                android:id="@+id/proj_btn_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:text="Selesai"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>