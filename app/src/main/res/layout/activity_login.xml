<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Background_White"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55sp"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Welcome Back!"
        android:textColor="@color/Main_Blue"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55sp"
        android:layout_marginTop="5sp"
        android:lineSpacingExtra="2sp"
        android:text="Enter Your Credentials Below to See List of Interns and Projects!"
        android:textColor="@color/Secondary_Grey" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_uname_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60sp"
        app:hintTextColor="@color/Main_Grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_uname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Username"
            android:textColor="@color/Main_Grey" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_pass_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        app:hintTextColor="@color/Main_Grey"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_pass_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/Main_Grey"
            android:textColorLink="@color/Main_Grey" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="70sp"
        android:backgroundTint="@color/Main_Blue"
        android:fontFamily="@font/nunito_bold"
        android:text="login"
        android:textColor="@color/Pure_White" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="100sp"
        android:fontFamily="@font/nunito_bold"
        android:text="Made By Kelompok 1"
        android:textColor="@color/Main_Blue" />

</LinearLayout>