<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp"
                android:text="Project"
                android:textSize="42sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/proj_projname_layout"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/proj_projname_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Project Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/proj_desc_layout"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/proj_desc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description " />
            </com.google.android.material.textfield.TextInputLayout>

            <DatePicker
                android:id="@+id/proj_start_date"
                android:layout_marginTop="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>

            <DatePicker
                android:id="@+id/proj_end_date"
                android:layout_marginTop="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>

            <Button
                android:id="@+id/proj_btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:text="Add Proj" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>